// Coaching Staff Layout (8-person team)
// Coach -> Reviewer/Tactician/QA Lead/Coordinator/Tester/Workers

layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        children
        pane size=1 borderless=true {
            plugin location="status-bar"
        }
    }

    // Coach: Lead, integration, and final decision maker
    tab name="Coach" focus=true {
        pane name="coach" {
            command "claude"
        }
    }

    // Reviewer: Code review and design guardrails
    tab name="Reviewer" {
        pane name="reviewer" {
            command "claude"
        }
    }

    // Strategy: Architecture and quality strategy
    tab name="Strategy" {
        pane split_direction="vertical" {
            // Tactician: Architecture, patterns, and system design
            pane name="tactician" {
                command "claude"
            }
            // QA Lead: Test strategy, quality bar, and release criteria
            pane name="qa-lead" {
                command "claude"
            }
        }
    }

    // Operations: Coordination and test execution
    tab name="Operations" {
        pane split_direction="vertical" {
            // Coordinator: Dependency tracking, blockers, and cross-team sync
            pane name="coordinator" {
                command "claude"
            }
            // Tester: Implements tests and finds edge cases
            pane name="tester" {
                command "claude"
            }
        }
    }

    // Workers: Implementation
    tab name="Workers" {
        pane split_direction="vertical" {
            // Worker A: Implementation focus
            pane name="worker-a" {
                command "claude"
            }
            // Worker B: Implementation focus
            pane name="worker-b" {
                command "claude"
            }
        }
    }

    // VAR: Monitoring plugin
    tab name="VAR" {
        pane {
            plugin location="file:~/.config/zellij/plugins/zellij-send-keys.wasm"
        }
    }
}
