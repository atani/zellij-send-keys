// Multi-Agent Layout (Corporate Structure)
// CEO → Manager → Workers hierarchy

layout {
    // Tab bar template
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        children
        pane size=1 borderless=true {
            plugin location="status-bar"
        }
    }

    // CEO tab (receives instructions from human, strategic planning)
    tab name="CEO" focus=true {
        pane name="ceo" {
            // Uncomment to auto-start Claude Code
            // command "claude"
            // args "--profile" "ceo"
        }
    }

    // Manager tab (breaks down tasks and delegates to workers)
    tab name="Manager" {
        pane name="manager" {
            // command "claude"
            // args "--profile" "manager"
        }
    }

    // Workers tab (8 panes for parallel execution)
    tab name="Workers" {
        pane split_direction="vertical" {
            pane split_direction="horizontal" {
                pane split_direction="vertical" {
                    pane name="worker-1"
                    pane name="worker-2"
                }
                pane split_direction="vertical" {
                    pane name="worker-3"
                    pane name="worker-4"
                }
            }
            pane split_direction="horizontal" {
                pane split_direction="vertical" {
                    pane name="worker-5"
                    pane name="worker-6"
                }
                pane split_direction="vertical" {
                    pane name="worker-7"
                    pane name="worker-8"
                }
            }
        }
    }

    // Plugin tab (for management/monitoring)
    tab name="Control" {
        pane {
            plugin location="file:~/.config/zellij/plugins/zellij-send-keys.wasm"
        }
    }
}
